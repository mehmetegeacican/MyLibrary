generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  Red
  Reading
  WillRead
  NotPlanningToRead
}

model Book {
  id Int @id @default(autoincrement())
  name String
  author String
  category String[]
  entered DateTime
  status BookStatus 
}

model Category {
  id Int @id @default(autoincrement())
  name String
  info String
}

model Author {
  id Int @id @default(autoincrement())
  name String
  info String
  books String[]
}