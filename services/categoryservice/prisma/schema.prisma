generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  Red
  Reading
  WillRead
  NotPlanningToRead
}

model books {
  id Int @id @default(autoincrement())
  name String
  author String
  category String[]
  entered DateTime
  status BookStatus 
  user_id Int
}

model Category {
  id Int @id @default(autoincrement())
  name String
  info String
  user_id Int
}

model Author {
  id Int @id @default(autoincrement())
  name String
  info String
  books String[]
}

model User {
  id      String   @id @map("id") // Assuming the type of id field in the existing table is String
  username String   @map("username")
  password    String   @map("password")
}